<head>
    {{>common_head}}
</head>

<body>
<div data-simplebar>
<div id="main" class="flex col center">

    <!-- OVERLAYS -->
    {{>common_overlays}}

    <!-- NAV -->
    {{>common_nav}}

    <!-- CONTENT -->
    <div id="content" class="flex col center">

        <script src="\js/polls/poll_fetch_one.js"></script>
        
        <div class="flex roll center">
        <div class="box-1" style="background-color: rgba(0,0,0,0)">

            <h1 id="poll_title" class="text-1 break-word" style="margin-bottom: 60px;"></h1>
            <h2 id="poll_description" class="text-2 break-word" style="margin: 0;"></h2>

        </div>
        </div>

        <div class="flex row center">
        <div class="box-1 flex row center" style="background-color: rgba(0,0,0,0)">

            <div class="flex col">
