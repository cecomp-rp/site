                <p class="title-1 text-4" style="margin:0">Fim</p>
                <p id="poll_end_date" class="title-1 format-date" style="margin:0"></p>
            </div>
            
        </div>
        </div>
        
        <div class="flex roll center" style="margin-bottom: 80px;">
            <div id="poll_options" class="box-1"></div>
        </div>

    </div>

