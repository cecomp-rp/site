            <input id="account_enable_email_sharing" type="checkbox"></input>

        </div>

        <div class="flex row center" style="margin-bottom: 0px; margin-top:40px;">
            <button id="account_settings_update" style="width: 200px;">Salvar</button>
        </div>

        <div class="flex row center">
            <p id="account_settings_message"></p>
